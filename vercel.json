{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public_html/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/([^\\.]+)$",
      "dest": "/api/$1.js"
    },
    {
      "src": "/index$",
      "status": 301,
      "headers": { "Location": "/" }
    },
    {
      "src": "^/$",
      "dest": "/public_html/index.html"
    },
    {
      "src": "/(.*)\\.html$",
      "status": 301,
      "headers": { "Location": "/$1" }
    },
	{
	  "src": "^/notification$",
	  "dest": "/public_html/notification.html"
	},
	{
	  "src": "^/chat-banned$",
	  "dest": "/public_html/chat-banned.html"
	},
    {
      "src": "/(.*)",
      "dest": "/public_html/$1"
    }
  ]
}
