{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public_html/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/([^\\.]+)$",
      "dest": "/api/$1.js"
    },
    {
      "src": "/index$",
      "status": 301,
      "headers": { "Location": "/" }
    },
    {
      "src": "^/$",
      "dest": "/public_html/index.html"
    },
    {
      "src": "/meteo$",
      "dest": "/public_html/meteo.html"
    },
    {
      "src": "/annonces$",
      "dest": "/public_html/annonces.html"
    },
    {
      "src": "/admin-annonces$",
      "dest": "/public_html/admin-annonces.html"
    },
    {
      "src": "/annonce/([^/]+)$",
      "dest": "/public_html/announcement-detail.html?id=$1"
    },
    {
      "src": "/(.*)\\.html$",
      "status": 301,
      "headers": { "Location": "/$1" }
    },
    {
      "src": "/(.*)",
      "dest": "/public_html/$1"
    }
  ]
}