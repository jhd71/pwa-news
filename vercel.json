{
  "version": 2,

  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "^/api/([^\\.]+)$",
      "dest": "/api/$1.js"
    },

    {
      "src": "^/index$|^/index\\.html$",
      "status": 301,
      "headers": {
        "Location": "/"
      }
    },

    {
      "src": "^/$",
      "dest": "/index.html"
    },

    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}